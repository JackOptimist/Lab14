<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#111">

    <LinearLayout
        android:id="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/field1"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:hint="@string/field_1"
        android:textColorHint="#111"
        android:autofillHints=""
        android:inputType="textMultiLine"
        android:background="#fff"
        tools:ignore="RtlSymmetry" />


    <EditText
        android:id="@+id/field2"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:autofillHints=""
        android:background="#fff"
        android:hint="@string/field_2"
        android:inputType="textMultiLine"
        android:textColorHint="#111"
        tools:ignore="RtlSymmetry,VisualLintTextFieldSize" />

    </LinearLayout>

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/dbResult"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/insert"
        android:textColor="#232525"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnRead"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/dbResult"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/btnInsert"
        android:text="@string/read"
        android:textColor="#232525"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/dbResult"
        android:layout_marginStart="46dp"
        android:layout_toEndOf="@id/btnRead"
        android:text="@string/delete_database"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/dbResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:autofillHints=""
        android:background="#fff"
        android:hint="@string/database_result"
        android:inputType="textMultiLine"
        android:lines="13"
        android:paddingStart="10dp"
        android:textColorHint="#111"
        tools:ignore="RtlSymmetry,VisualLintTextFieldSize" />

</RelativeLayout>